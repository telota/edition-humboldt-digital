                        <addrLine>chez <choice>
                                <abbr>Mr</abbr>
                                <expan>Monsieur</expan>
                            </choice>
                            <persName ref="https://edition-humboldt.de/H0017952 https://d-nb.info/gnd/116702176"><choice>
                                    <abbr>J.</abbr>
                                    <expan>Jean</expan>
                                </choice>
                                <choice>
                                    <abbr>L.</abbr>
                                    <expan>Laurence</expan>
                                </choice> Rugendas</persName><note place="mTop" hand="#author"><hi rendition="#u"><choice>
                                        <abbr>fr.</abbr>
                                        <expan>franco</expan>
                                    </choice></hi></note></addrLine>
                        <addrLine>Professeur de</addrLine>
                        <addrLine>l’Académie de</addrLine>
                        <addrLine>peinture.</addrLine>
                    </address>
                </closer>
